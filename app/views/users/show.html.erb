
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %>
      <table class="table">
      <tbody><tr></tr>
      <tr>
	     <th>name</th>
	     <th><%= @user.name %></th>
      </tr>
      <tr>
	     <th>introduction</th>
	     <th><%= @user.introduction %></th>
      </tr>
      </tbody>
      </table>


   <div class="row">
    <%= link_to "", edit_user_path(@user) ,class:'btn btn-outline-secondary btn-block fas fa-user-cog',method: :get %>
　</div>
　<h2 class="mt-3">New book</h2>
  <%= form_with model:@book, url: books_path, local:true do |f| %>
　<div class="form-group"
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
　</div>
　<div class="form-group">
 　<label for="book_opinion">Opinion</label>
   <%= f.text_area :body %>
  </div>
　<div class="form-group">
   <%= f.submit "Create Book" %>
  </div>
  <% end %>
 </div>

  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
   <thead>
   <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th></th>
   <th></th>
　 </tr>
　 </thead>
　 
　 <tbody>
   <% @books.each do |book| %>
    <tr>
    <td><%= link_to  user_path(@user) do %>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %>
    <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    <td><% if book.favorited_by?(current_user) %>
          <p>
          <%= link_to book_favorites_path(book), method: :delete do %>
          <i class="fa fa-heart", style="color: red;", aria-hidden="true"></i><%= book.favorites.count %>
          <% end %>
          </p>
         <% else %>
          <p>
          <%= link_to book_favorites_path(book), method: :post do %>
          <i class="fa fa-heart", style="color: blue;", aria-hidden="true"></i><%= book.favorites.count %>
          <% end %>
          </p>
         <% end %></td>
      <td>コメント数:<%= book.book_comments.count %></td>
    </tr>
    <% end %>
 　</tbody>
　 </table>
　</div>
 </div>
</div>

