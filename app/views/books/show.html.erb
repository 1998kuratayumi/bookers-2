<main>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %>

      <table class="table">
      <tbody><tr></tr>
      <tr>
	     <th>name</th>
	     <th><%= @user.name %></th>
      </tr>
      <tr>
	     <th>introduction</th>
	     <th><%= @user.introduction %></th>
      </tr>
      </tbody>
      </table>


<div class="row">
 <%= link_to "", edit_user_path(@user) ,class:'btn btn-outline-secondary btn-block fas fa-user-cog',method: :get %>
</div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: @book_new, url: books_path, method: :post, local:true do |f| %>
   <div class="form-group"
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
   </div>
   <div class="form-group">
   <label for="book_opinion">Opinion</label>
    <%= f.text_field :body %>
   </div>
   <div class="form-group">
    <%= f.submit "Create Book" %>
    </div>
  <% end %>

  <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		     <td>
  		     <%= link_to  user_path(@user) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"exmaple-hoge", fallback: "no_image.jpg" %>
           <br><%= @user.name %> </br>
         <% end %>
         </td>
           <td><%= @book.title %></td>
           <td><%= @book.body %></td>
           <% if @user.id == current_user.id %>
           <td><%=link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%=link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "本当に消しますか？" } %></td>
            <% end %>
          </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>
</main>
